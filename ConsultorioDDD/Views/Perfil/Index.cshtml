@model IEnumerable<Consultorio.Domain.Models.Perfil>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>
    Perfis
</h3>
<p>

@if (!Html.ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        @Html.ValidationSummary()
    </div>
}
    <br />
<p>
    <input type="button" class="btn btn-primary" value="Novo Perfil"
           onclick="location.href='@Url.Action("Create", "Perfil")'" />
</p>
<table class="table table stripped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @if (item.Ativo == 1)
                {@Html.Raw("Sim");
                }
                else
                {@Html.Raw("Não");
                }
            </td>
            <td>
                <div class="btn-group">
                    <input type="button" class="btn btn-default" value="Editar" onclick="location.href='@Url.Action("Edit", "Perfil", new { id = item.Id })'" />
                    <input type="button" class="btn btn-default" value="Detalhe" onclick="location.href='@Url.Action("Details", "Perfil", new { id = item.Id })'" />
                    <input type="button" class="btn btn-default" value="Excluir" onclick="location.href='@Url.Action("Delete", "Perfil", new { id = item.Id })'" />
                </div>
            </td>
        </tr>
    }

</table>
