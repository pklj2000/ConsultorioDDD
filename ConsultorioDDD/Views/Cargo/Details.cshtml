@model Consultorio.Domain.Models.Cargo
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Cargo</h2>
<p>
</p>
<fieldset>
    <div class="panel panel-default">
        <div class="panel-body">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <div class="display-label">
                        <label class="col-sm-2 text-info">Código</label>
                    </div>
                    <div class="col-sm-10">
                        <label class="control-label">@Html.DisplayFor(model => model.Id)</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="display-label">
                        <label class="col-sm-2 text-info">Empresa</label>
                    </div>
                    <div class="col-sm-10">
                        <label class="control-label">@Html.DisplayFor(model => model.Empresa.Nome)</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="display-label">
                        <label class="col-sm-2 text-info">Departamento</label>
                    </div>
                    <div class="col-sm-10">
                        <label class="control-label">@Html.DisplayFor(model => model.Departamento.Descricao)</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="display-label">
                        <label class="col-sm-2 text-info">Cargo</label>
                    </div>
                    <div class="col-sm-10">
                        <label class="control-label">@Html.DisplayFor(model => model.Descricao)</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="display-label">
                        <label class="col-sm-2 text-info">Periodicidade</label>
                    </div>
                    <div class="col-sm-10">
                        <label class="control-label">@Html.DisplayFor(model => model.Periodicidade.Descricao)</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="display-label">
                        <label class="col-sm-2 text-info">@Html.DisplayNameFor(model => model.Ativo)</label>
                    </div>
                    <div class="col-sm-10">
                        <label class="control-label">@(Model.Ativo == 1 ? "Sim" : "Não") </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="display-label">
                        <label class="col-sm-2 text-info">Exames Associados</label>
                    </div>
                    <div class="col-sm-10">
                        @foreach (var item in @Model.Exames)
                        {
                            <span class="label label-default">@item.Descricao</span>
                        }
                    </div>
                </div>
                <div class="form-group">
                    <div class="display-label">
                        <label class="col-sm-2 text-info">Riscos Associados</label>
                    </div>
                    <div class="col-sm-10">
                        @foreach (var item in @Model.Riscos)
                        {
                            <span class="label label-default">@item.Descricao</span>
                        }
                    </div>
                </div>
            </form>
        </div>
    </div>
</fieldset>
<p>
    <input type="button" class="btn btn-primary" value="Editar" onclick="location.href='@Url.Action("Edit", "Cargo", new { id = Model.Id })'" />
    <input type="button" class="btn btn-primary" value="Voltar" onclick="location.href='@Url.Action("Index", "Cargo", new { empresaId = Model.EmpresaId })'" />
</p>
