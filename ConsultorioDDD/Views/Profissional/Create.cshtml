@model Consultorio.Domain.Models.Profissional
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>
    Grupo de perguntas
</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    if (!Html.ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger" role="alert">
            @Html.ValidationSummary()
        </div>
    }

    <fieldset>
        <div class="panel panel-default">
            <div class="panel-body">
                <form class="form-horizontal" role="form">
                    <div class="row form-group">
                        <div class="display-label">
                            <label class="col-sm-2 control-label">Profissional</label>
                        </div>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="display-label">
                            <label class="col-sm-2 control-label">CRM</label>
                        </div>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.CRM, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="display-label">
                            <label class="col-sm-2 control-label">Telefone</label>
                        </div>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Telefone, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="display-label">
                            <label class="col-sm-2 control-label">Ativo</label>
                        </div>
                        <div class="col-sm-10">
                            @Html.CheckBoxFor(model => model.AtivoCheck)
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="display-label">
                            <label class="col-sm-2 control-label">@Html.LabelFor(model => model.Observacao)</label>
                        </div>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Observacao, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Observacao)
                        </div>
                    </div>

                </form>
            </div>
        </div>
        <p>
            <input type="submit" value="Salvar" class="btn btn-primary" />
            <input type="button" class="btn btn-primary" value="Cancelar" onclick="location.href='@Url.Action("Index", "Profissional")'" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
