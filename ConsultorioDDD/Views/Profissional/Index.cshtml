@model IEnumerable<Consultorio.Domain.Models.Profissional>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!Html.ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        @Html.ValidationSummary()
    </div>
}

<h3>Profissionais</h3>

<p>
    <input type="button" name="btnNovo" class="btn btn-primary" value="Novo Profissional" onclick="location.href='@Url.Action("Create", "Profissional")'" />
</p>
<table class="table table stripped">
    <tr>
        <th>
            Nome
        </th>
        <th>
            CRM
        </th>
        <th>
            Ativo
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CRM)
            </td>
            <td>
                @(item.Ativo == 1 ? "Sim" : "Não")
            </td>
            <td>
                <div class="btn-group">
                    <input type="button" class="btn btn-default" value="Editar" onclick="location.href='@Url.Action("Edit", "Profissional", new { id = item.Id })'" />
                    <input type="button" class="btn btn-default" value="Detalhe" onclick="location.href='@Url.Action("Details", "Profissional", new { id = item.Id })'" />
                    <input type="button" class="btn btn-default" value="Excluir" onclick="location.href='@Url.Action("Delete", "Profissional", new { id = item.Id })'" />
                </div>
            </td>
        </tr>
    }

</table>
