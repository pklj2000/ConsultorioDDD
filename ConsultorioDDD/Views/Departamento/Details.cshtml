@model Consultorio.Domain.Models.Departamento

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>
    Departamento
</h3>
<fieldset>
    <div class="panel panel-default">
        <div class="panel-body">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <div class="display-label">
                        <label class="col-sm-2 text-info">Empresa</label>
                    </div>
                    <div class="col-sm-10">
                        <label class="control-label">@Html.DisplayFor(model => model.Empresa.Nome)</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="display-label">
                        <label class="col-sm-2 text-info">Descrição</label>
                    </div>
                    <div class="col-sm-10">
                        <label class="control-label">@Html.DisplayFor(model => model.Descricao)</label>
                    </div>
                </div>

                <div class="form-group">
                    <div class="display-label">
                        <label class="col-sm-2 text-info">Responsável</label>
                    </div>
                    <div class="col-sm-10">
                        <label class="control-label">@Html.DisplayFor(model => model.Responsavel)</label>
                    </div>
                </div>

                <div class="form-group">
                    <div class="display-label">
                        <label class="col-sm-2 text-info">@Html.DisplayNameFor(model => model.Ativo)</label>
                    </div>
                    <div class="col-sm-10">
                        <label class="control-label">@(Model.Ativo == 1 ? "Sim" : "Não")</label>
                    </div>
                </div>
            </form>
        </div>
    </div>
</fieldset>
<p>
    <input type="button" class="btn btn-primary" value="Voltar" onclick="location.href='@Url.Action("Index", "Departamento", new { EmpresaId = Model.EmpresaId })'" />
</p>
