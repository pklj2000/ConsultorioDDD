@model Consultorio.Domain.Models.Usuario
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>
    Usuário
</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        @Html.HiddenFor(model => model.Id)
        <div class="panel panel-default">
            <div class="panel-body">
                <form class="form-horizontal" role="form">
                    <div class="row form-group">
                        <div class="display-label">
                            <label class="col-sm-2 control-label">Código</label>
                        </div>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Codigo, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="display-label">
                            <label class="col-sm-2 control-label">Nome</label>
                        </div>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="display-label">
                            <label class="col-sm-2 control-label">Email</label>
                        </div>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="display-label">
                            <label class="col-sm-2 control-label">@Html.LabelFor(model => model.Ativo)</label>
                        </div>
                        <div class="col-sm-10">
                           @Html.CheckBoxFor(model => model.AtivoCheck)
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="display-label">
                            <label class="col-sm-2 control-label">@Html.LabelFor(model => model.DataUltimoAcesso)</label>
                        </div>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.DataUltimoAcesso, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <p>
            <input type="submit" value="Salvar" class="btn btn-primary" />
            <input type="button" class="btn btn-primary" value="Cancelar" onclick="location.href='@Url.Action("Index", "Usuario")'" />
        </p>
    </fieldset>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
