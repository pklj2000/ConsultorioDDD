@model IEnumerable<Consultorio.Domain.Models.PerguntaGrupo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!Html.ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        @Html.ValidationSummary()
    </div>
}

<h3>Grupo de Perguntas</h3>
   
<p>
    <input type="button" name="btnNovo" class="btn btn-primary" value="Novo Grupo" onclick="location.href='@Url.Action("Create", "PerguntaGrupo")'" />
</p>
<table class="table table stripped">
    <tr>
        <th>
            Grupo 
        </th>
        <th>
            Sequencia
        </th>
        <th>
            Ativo
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sequencia)
            </td>
            <td>
                @(item.Ativo == 1 ? "Sim" : "Não")
            </td>
            <td>
                <div class="btn-group">
                    <input type="button" class="btn btn-default" value="Editar" onclick="location.href='@Url.Action("Edit", "PerguntaGrupo", new { id = item.Id })'" />
                    <input type="button" class="btn btn-default" value="Detalhe" onclick="location.href='@Url.Action("Details", "PerguntaGrupo", new { id = item.Id })'" />
                    <input type="button" class="btn btn-default" value="Excluir" onclick="location.href='@Url.Action("Delete", "PerguntaGrupo", new { id = item.Id })'" />
                    <input type="button" class="btn btn-default" value="Perguntas" onclick="location.href='@Url.Action("Index", "Pergunta", new { grupoid = item.Id })'" />
                </div>
            </td>
        </tr>
    }

</table>
